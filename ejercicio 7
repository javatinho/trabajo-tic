int main()
{
  int filas;
  int posiciones;
 
  printf("Por favor introduzca el nยบ filas : ");
  scanf(" %d",&filas);
 
  int i = 1;
  int asteriscos = 1;
  
  for(i=1; i<=filas; i++){
	int j = 0;
	
	for(j=0; j<=(filas-i); j++){
    	printf(" ");
	}
    
	if(i==1){
    	printf("*");
	    
	}
	else{
        asteriscos = asteriscos + 2;
    	for(j=1; j<=asteriscos; j++){
        	printf("*");
    	}
	}
	printf("\n");
  }
  return 0;
}
