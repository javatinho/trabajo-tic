#include <stdio.h>

    int main()
{
	char cadena[1000];
	char cAux ;
	int i;

	printf("Por favor introduzca la cadena: ");

	i = 0 ;
	while ( cAux != '\n')
	{
		scanf("%c" , &cAux ) ;
		cadena[i] = cAux ;
		i++;
	}

	while(i>=0)
	{
		printf("%c", cadena[i-1]);
		i--;
	}
	printf("\n");
	return 0;
}
