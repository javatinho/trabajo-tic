int main()
{   
    int horas;
    int minutos;
    int segundos;
    printf("Por favor, introduzca las horas:");
    scanf("%d",&horas);
    printf("\n");
    
    printf("Por favor introduzca los minutos:");
    scanf("%d", &minutos);
    printf("\n");
    
    printf("Por favor introduzca los segundos:");
    scanf("%d", &segundos);
    printf("\n");
    
    int totaldesgundos  = horas*3600 + minutos*60 + segundos;
    printf("El total de segundos es : %d",totaldesgundos);
    

    return 0;
}
